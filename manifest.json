{
  "name": "in-site Shortkeys",
  "version": "1.0",
  "description": "Custom Shortcuts in your website!",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "options_page": "options/options.html",
  "background": {
    "scripts": [
      "constant.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "matches": [
      "<all_urls>"
    ],
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "constant.js",
        "content/shortkeys.js",
        "content/index.js"
      ],
      "css": [
        "content/content-styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "manifest_version": 2,
  "commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle feature foo"
    }
  }
}
