{
  "name": "In-site Shortkeys",
  "version": "1.0",
  "description": "Custom Shortkeys in your website!",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "options_page": "options/settings.html",
  "background": {
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "scripts": [
      "shared/constant.js",
      "shared/utils.js",
      "background/main.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "shared/constant.js",
        "shared/utils.js",
        "content/shortkeys.js",
        "content/index.js"
      ],
      "css": [
        "shared/styles.css",
        "content/content-styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "manifest_version": 2
}
